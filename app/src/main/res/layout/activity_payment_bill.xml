<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PaymentBill">

    <TextView
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="Comprobante de  Pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:clipChildren="false"
                                        android:background="@android:color/white"
                                        app:cardCornerRadius="10dp"
                                        android:layout_height="528dp"
                                        app:layout_constraintTop_toBottomOf="@+id/textView7"
                                        android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toTopOf="@+id/button"
                                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
                                        app:layout_constraintHorizontal_bias="0.498"
                                        app:layout_constraintVertical_bias="0.42" android:id="@+id/cardView2">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

            <ImageView android:layout_width="200dp"
                       android:scaleType="fitCenter"
                       android:id="@+id/qr_img_generated"
                       android:layout_height="200dp"
                       android:layout_marginTop="40dp"
                       app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                       android:layout_marginStart="8dp"/>
            <!--
            <View
                    android:id="@+id/divider2"
                    android:layerType="software"
                    android:layout_width="match_parent"
                    android:background="@drawable/dashed_line"
                    android:layout_height="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="44dp"/>
                    -->
            <TextView
                    android:text="aaecb858-1ad4-11e9-ab14-d663bd873d93"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/qr_img_generated"
                    android:textSize="16sp" android:textColor="@color/colorAccent" android:layout_marginStart="32dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
